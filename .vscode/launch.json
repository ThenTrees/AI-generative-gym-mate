{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch TS via ts-node",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["${workspaceFolder}/src/index.ts"],
      "env": { "NODE_OPTIONS": "--enable-source-maps" },
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"]
    }
  ]
}
